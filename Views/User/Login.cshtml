@model CliniqonProject.Models.LoginTbl

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en" data-x="html" data-x-toggle="html-overflow-hidden">

<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title> Tour - Login </title>
</head>

<body>
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { role = "form", @class = "formBox", id = "loginform" }))
    {
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="bgc center">
            <div class="container">
                <div class="header">
                    <h1><span class="l">L</span>OGIN</h1>
                </div>
                <form>
                    <label class="">Email Address</label>
                    @Html.TextBoxFor(m => m.Email, new { @required="required",@class="inp" })
                   
                    <span asp-validation-for="Email" class="text-danger" style="color: red;"></span>
                    <label for="psw">Password</label>
                    <input type="text" class="inp" id="password" name="Password" value="@(Model != null ? Model.Password : "")" />
                    <span asp-validation-for="Password" class="text-danger" style="color: red;"></span>
                    <button type="submit">LOGIN</button>
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                </form>
                <div class="signup">
                    <b>Don't have account?</b>
                    <a asp-action="RegisterUser" asp-controller="User">Sign up</a>
                </div>
            </div>
        </div>
    }


</body>

</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}

